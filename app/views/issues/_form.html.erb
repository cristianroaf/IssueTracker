<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>

<div class="px-5">
  <%= form_with(model: issue, local: true) do |form| %>
    <% if issue.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

        <ul>
          <% issue.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <%= form.label :Title %>
    <div class="form-row">
      <div class="field">
        <%= form.text_field :Title %>
      </div>
    </div>

    <%= form.label :Description %>
    <div class="field">
      <textarea id="Description" style="width: 70%">
      </textarea>

    </div>
        
    <%= form.label :Type %>
    <div class="form-group">
      <div class="field">
        <%= form.select :Type, options_for_select(Issue.type, issue[:Type]), :class => 'genForm_dropBox' %>
      </div>
    </div>

    <%= form.label :Priority %>
    <div class="field">
      <%= form.select :Priority, options_for_select(Issue.priority, issue[:Priority]), :class => 'genForm_dropBox' %>
    </div>

    <%= form.label :Status %>
    <div class="field">
      <%= form.select :Status, options_for_select(Issue.status), :class => 'genForm_dropBox' %>
    </div>

    <div class="field" style="display:none;">
      <%= form.label :user_id %>
      <%= form.text_field :user_id %>
    </div>

    <div class="field" style="display:none;">
      <%= form.label :asignee_id %>
      <%= form.text_field :asignee_id %>
    </div>

    <div class="field" style="display:none;">
      <%= form.label :Votes %>
      <%= form.number_field :Votes %>
    </div>

    <div class="field" style="display:none;">
      <%= form.label :Watchers %>
      <%= form.number_field :Watchers %>
    </div>

    <div class="field">
      <%= form.label :at_name %>
      <%= form.text_field :at_name %>
    </div>

    <div class="field">
      <%= form.label :at_format %>
      <%= form.text_field :at_format %>
    </div>

    <div class="field">
      <%= form.label :at_size %>
      <%= form.number_field :at_size %>
    </div>

    <div class="field">
      <%= form.label :at_updated_at %>
      <%= form.datetime_select :at_updated_at %>
    </div>

    <div class="form-group">
      <label for="FormControlFile1">Attach</label>
      <input type="file" class="form-control-file" id="FormControlFile1">
    </div>

    <div style="float:right;"">
      <%= form.submit class:"btn btn-outline-dark"%>
    <button type="button" class="btn btn-outline-dark">
      <%= link_to 'Back', issues_path %>
      
    </button>
    </div>
  <% end %>

  <form>

  </form>
</div>
